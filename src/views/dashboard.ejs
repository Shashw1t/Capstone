<h2>Welcome, <%= user.username %>!</h2>
<a href="/docs/upload" class="btn btn-primary mb-3">Upload Document</a>
<!-- <a href="/auth/logout" class="btn btn-secondary mb-3">Logout</a> -->

<h3>Your Uploaded Documents</h3>
<ul class="list-group">
  <% if (docs.length === 0) { %>
    <li class="list-group-item">No documents uploaded yet.</li>
  <% } %>
  <% docs.forEach(doc => { %>
    <li class="list-group-item">
      <a href="/docs/<%= doc._id %>">
        <strong><%= doc.originalName %></strong>
      </a>
      (uploaded at <%= doc.uploadedAt.toLocaleString() %>)
    </li>
  <% }) %>
</ul>